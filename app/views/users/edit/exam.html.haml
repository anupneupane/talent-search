-if @is_new
  %h2 添加考试分数
-else
  %h2 更新考试分数 

=render 'shared/flash',:flash=>flash

= semantic_nested_form_for @user do |f|
  = f.error_messages  
  = f.input :this_step,:as=>:hidden,:value=>'exam'
  = f.input :next_step,:as=>:hidden,:value=>'experience' if @is_new
  = f.semantic_fields_for :exams do |exam|
    .row
      .span4= exam.input :exam_name,:as=>:select,:collection=>ExamType.all
      .span3= exam.input :score 
      .span3=exam.input :date,:as=>:string
    
    = exam.link_to_remove "删除考试分数" 
  = f.link_to_add "添加考试分数", :exams
  .row.span16.actions
    .span2.offset6= submit_tag "#{@is_new ? t('Next Step') : t('Save Changes')}",:class=>"btn primary"

