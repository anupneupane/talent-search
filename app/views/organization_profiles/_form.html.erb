<%= form_for @organization_profile do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :short_description %><br />
    <%= f.text_area :short_description %>
  </p>
  <p>
    <%= f.label :long_description %><br />
    <%= f.text_area :long_description %>
  </p>
  <p>
    <%= f.label :location_id %><br />
    <%= f.number_field :location_id %>
  </p>
  <p>
    <%= f.label :contact_person %><br />
    <%= f.text_field :contact_person %>
  </p>
  <p>
    <%= f.label :phone_number %><br />
    <%= f.text_field :phone_number %>
  </p>
  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :logo %><br />
    <%= f.text_field :logo %>
  </p>
  <p>
    <%= f.label :website %><br />
    <%= f.text_field :website %>
  </p>
  <p><%= f.submit %></p>
<% end %>
