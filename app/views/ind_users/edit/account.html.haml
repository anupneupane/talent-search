/=render 'ind_users/navigation' unless params[:controller]=="ind_users" and params[:action]=="new"
.row
  =render 'ind_users/side_nav'
  .span12.offset1
 

    = form_for @user do |f|
      = f.error_messages  
      .row
        .span2= f.label :email 
        .span4= f.email_field :email,:placeholder=> "使用学校或公司邮件地址"
      .row
        .span2= f.label "旧密码"
        .span4= f.password_field :old_password 
      .row
        .span2= f.label "新密码"
        .span4= f.password_field :password 
      .row
        .span2= f.label "重输新密码"
        .span4= f.password_field :password_confirmation
      .row
        .span4.offset3= f.submit "保存修改",:class=>"btn primary"
