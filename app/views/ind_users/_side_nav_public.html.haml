.span3.user_panel


  .avatar.medium=image_tag @user.avatar.url(:medium),:width=>150
  %h3=@user.profile.name
  %p 
    %b 年龄:
    #{@user.profile.age}岁 
  %p
    %b 性别:
    #{@user.profile.gender} 
  %p
    %b 国籍:
    #{@user.profile.nationality} 
  %p 
    %b 现居国:
    #{@user.profile.residence} 
  %p
    %b 省/州:
    #{@user.profile.province.name} 
  = bookmark_code @user unless @user==current_user
  =render 'pages/message_box'
  =link_to "留言","",:'data-controls-modal'=>"modal-from-dom",:'data-backdrop'=>"true", :class=>'btn' unless @user==current_user

  -unless @user.chinese_resume_file_name.nil?
    %h4 
      中文简历
      .edit=link_to "更新",ind_user_edit_path(current_user.id,'profile') if current_user==@user
    =link_to "下载", @user.chinese_resume.to_s

  -unless @user.english_resume_file_name.nil?
    %h4 
      英文简历
      .edit=link_to "更新",ind_user_edit_path(current_user.id,'profile') if current_user==@user
    =link_to "下载", @user.english_resume.to_s
  
