%ul{:class=>"tabs",:"data-tabs"=>"tabs"}

  -if @user!=current_user
    %li.active=link_to "用户信息", ind_user_profile_path(@user)
    
  -else
    %li{:class=>"#{params[:controller]=='ind_users' && params[:action]=='overview' ? 'active':''}"}
      =link_to "主页", ind_user_overview_path

    %li{:class=>"#{params[:controller]=='ind_users' && params[:action]=='show' ? 'active':''}"}
      =link_to "个人资料",@user
    -if @user.nil? || @user==current_user
      %li{:class=>"#{params[:controller]=='shouts' && params[:action]=='index' ? 'active':''}"}
        =link_to "悟空微博",shouts_path
      %li{:class=>"#{params[:controller]=='job_searches' && params[:action]=='show' ? 'active':''}"}
        =link_to '搜索职位',default_jobs_path 



      %li{:class=>"#{params[:action]=='new'  ? 'active':''}"}
        =link_to "发布职位",new_job_post_path
      %li{:class=>"#{params[:action]=='job_posts'  ? 'active':''}"}
        =link_to "发布存档",ind_user_job_posts_path(current_user)
      
   

          
      %li{:class=>"dropdown #{params[:action]=~/bookmarked/  ? 'active':''}",:"data-dropdown"=>"dropdown" }
        =link_to_function "收藏夹",'$(".dropdown-menu").toggle()', :class=>"dropdown-toggle" 
        %ul.dropdown-menu
          %li{:class=>"#{params[:action]=='bookmarked_users'  ? 'active':''}"}=link_to "关注的个人",bookmarked_users_path
          %li{:class=>"#{params[:action]=='bookmarked_companies'  ? 'active':''}"}=link_to "关注的企业",bookmarked_companies_path
          %li{:class=>"#{params[:action]=='bookmarked_jobs'  ? 'active':''}"}=link_to "收藏的职位",bookmarked_jobs_path

:javascript
  $(".dropdown-toggle").hover(
    function () {
      $(this).addClass('active');
      $(".dropdown-menu").show();
    }, 
    function () {
      $(this).removeClass('active');
      $(".dropdown-menu").hide();
    }
  );
  $(".dropdown-menu").hover(
    function () {
      $(this).show();
    }, 
    function () {
      $(this).hide();
    }
  );

