%ul{:class=>"tabs",:"data-tabs"=>"tabs"}

  %li{:class=>is_active?('projects#overview')}
    =link_to "项目圈主页", project_overview_path

  %li{:class=>"#{is_active?('project_searches#')} #{is_active?('projects#index')}"}=link_to '项目搜索', project_search_path
  %li{:class=>is_active?('park#')}=link_to '创业园区', default_parks_path


:javascript
  $(".dropdown-toggle").hover(
    function () {
      $(this).addClass('active');
      $(this).next(".dropdown-menu").show();
    }, 
    function () {
      $(this).removeClass('active');
      $(this).next(".dropdown-menu").hide();
    }
  );
  $(".dropdown-menu").hover(
    function () {
      $(this).show();
    }, 
    function () {
      $(this).hide();
    }
  );

